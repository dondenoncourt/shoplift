<div id="content">
  <%= render 'profile_info', user: @user %>
  <div class="rightCol">
    <% if @items.empty? %>
      <div id="content" class="internal help">
        <div class="entry">
          <h2><%= @user.full_name %> does not have any items yet.</h2>
          <% if @user.id == current_user.id %>
            <br />
            <p>You can add items in several ways:</p>
            <ul>
              <li>
               Click <%= link_to "Add", new_post_path, :class => 'modal_link' %> and insert The Shoplift bookmarklet to your browser's bookmarks, then, when shopping at a page you wish to post, simply click the Lift It bookmark in your bookmarks.
              </li>
              <li> Click re-lift on one of the posts on the <%= link_to "Follow", shoplifters_path %> page. </li>
            </ul>
          <% end %>
        </div>
      </div>
    <% else %>
      <%= render @items %>
      <div id="results"></div>
      <%= will_paginate(@items) %>
      <%= pageless(@items.total_pages, user_path(@user)) %>
    <% end %>
  <div class="clear"></div>
</div>
