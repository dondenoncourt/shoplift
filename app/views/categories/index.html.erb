<% provide(:title, 'Follow interests') %>
<div class="leftCol">
  <%= render "users/follow_options" %>
</div>

<div class="rightCol">
  <% if (@new_user) %>
    <h2>Congrats! You're all signed up.</h2>
    <p>
      Get started by choosing a handful of Shoplifters to follow. You can follow friends and celebrities, or your favorite brands and stores. The items they share are the items you'll see when you log in.
    </p>
    <p>Click Follow to add a member to your list. If you change your mind, just click again to unfollow.</p>
  <% end %>
  <ul class="interestWrap">
    <% @categories.each do |category| %>
      <li>
        <div class="entry interest">
          <h2>
            <%= link_to category.name, shoplifters_path(:category => category.param) %>
            <% if can? :update, category %>
              <span class="small_edit"><%= link_to "edit", edit_category_path(category) %></span>
            <% end %>
          </h2>
          <ul>
            <% category.posts.limit(4).each do |post| %>
              <li><%= link_to image_tag(post.photo.url(:small)), post.user %></li>
            <% end %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="clear"></div>
