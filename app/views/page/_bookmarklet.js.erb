(function(){
  var i = 'the-shoplift-script',
      c = 'the-shoplift-container',
      d = document,
      e = d.getElementById(i),
      f = d.getElementById(c),
      j = d.createElement('script'),
      t = (new Date()).getTime(),
      u = ('<%= bookmarklet_url %>?z=' + t);

  if( e ) { e.parentNode.removeChild(e); }
  if( f ) { f.parentNode.removeChild(f); }

  j.setAttribute('src', u);
  j.setAttribute('id', i);

  d.head.appendChild(j);
})();
