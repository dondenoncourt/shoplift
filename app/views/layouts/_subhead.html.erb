<a id="top"></a>
<div class="headWrap">
  <div class="header">
    <h1><%= link_to "The Shoplift", root_path %> </h1>
    <% if user_signed_in? %>
      <div class="navigation">
        <a class="logout" href="/logout">Sign Out</a>
        <ul class="mainNav">
          <li><%= link_to "Add", new_post_path, :class => 'modal_link' %></li>
          <li><%= link_to "Follow", page_follow_interests_subcat_path %> </li>
          <li><%= link_to "Saved", user_path(current_user, :saved => true) %></li>
        </ul>
        <form action="#" class="search">
          <input type="text" class="text search" name="search" value="Search" /><input type="submit" name="submit" class="searchSubmit" />
        </form>
        <%= link_to image_tag(current_user.avatar.url(:thumb)), user_path(current_user), :class => "profilePhoto" %>
      </div>
    <% end %>
  </div>
</div>
