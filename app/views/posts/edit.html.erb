<h2>Add An Item</h2>
<div class="modalContent">
  <%= form_for @post, :html => { :method => :put } do |f| %>

    <p>
      <%= f.label :brand %>
      <%= f.text_field :brand, :value => @brand_name %>
      <%= f.hidden_field :parser_brand, :value => @brand_name %>
    </p>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description, :size => "5x5" %>
    </p>
    <p>
      <%= f.submit "Add", :class => 'submit' %>
    </p>
  <% end %>
</div>
