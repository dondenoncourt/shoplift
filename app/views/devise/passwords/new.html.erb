<h2>Forgot your password?</h2>
<div class="modalContent">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'modal_form' }) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.email_field :email, :placeholder => 'Email Address' %></div>
    <br />
    <div><%= f.submit "Send me reset password instructions", :class => "submit" %></div>
  <% end %>

</div>